@page
@model Yongbo.Pages.Users.EditModel
@{
}
@if(Model.showerror.Length > 0 ){
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.showerror</strong>
		<button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="close"></button>
	</div>
}
@if (Model.showinfo.Length > 0)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@Model.showinfo</strong>
        <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="post">
    <input type="hidden" id="HID" name="HID" value=" @Model.u1.ID">  <br><br>
    <!-- First Name -->
    <label for="fname">First Name:</label><br>
    <input type="text" id="Fname" name="Fname" value=" @Model.u1.Fname">  <br><br>

    <!-- Last Name -->
    <label for="lname">Last Name:</label><br>
    <input type="text" id="lname" name="Lname" value=" @Model.u1.Lname"><br><br>

    <!-- Email -->
    <label for="email">Email:</label><br>
    <input type="email" id="email" name="Email" value=" @Model.u1.Email"><br><br>

    <!-- Password -->
    <label for="password">Password:</label><br>
    <input type="password" id="password" name="password1" value=" @Model.u1.password"><br><br>

    <!-- Submit Button -->
    <button type="submit">Register</button>
</form>